<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m" 
	xmlns:u="sap.ui.unified"
	xmlns:f="sap.f" 
	controllerName="sap.ui.demo.todo.controller.App" 
	displayBlock="true">
    <Panel id="mileageCalculatorAddressListPanel"
      class="sapUiResponsiveMargin mileageCalculatorAddressListPanel"
      width="auto" >
        <List id="mileageCalculatorAddressList"
            items="{ path: '/addressNodes'}"
            mode="None"
            growing="true"
            growingScrollToLoad="true"
            showNoData="false"
            showSeparators="None">
            <CustomListItem class="customListItem">
            
            <Text class="lineElement" text="."/>
                <FlexBox class="distanceField"
                    alignItems="Center"
                    justifyContent="Center">
                    <!-- <Input class="distanceInput" value="{Distance}" width = "50px"  visible="{= !!${Key}}" /> -->
                    <!-- <Text class="distanceUnitLabel" text="{Distance}Km" textAlign="Center" visible="{= !!${Key}}"/> -->
                </FlexBox>
                <FlexBox class="addressNode"
                    alignItems="Center"
                    justifyContent="Center">
                        <Button text="{i18n>REMOVE_NODE_BUTTON_LABEL}" press=".removeAddressNode(${Key})"></Button>
                        <ComboBox xmlns="sap.m" items="{/allAddresses}" value="{Name}" selectedKey="{Key}" change=".updateDistance(${Key})">
                            <items>
                                <core:Item xmlns:core="sap.ui.core" 
                                        key="{Key}" 
                                        text="{Name}"
                                        
                                        />
                            </items>
                        </ComboBox>
                        <!-- <Input class="todoInput" value="{Name}" placeholder="{i18n>ADDRESS_PLACEHOLDER}" change=".updateDistance(${Key})"/> -->
                        <Button class="currentLocationIcon" icon="./img/current-location.svg" press=".addCurrentGeolocation(${Key})" visible="{= !${Name}}">
                        </Button>
                </FlexBox>
                <FlexBox class="addAddress">
                <Button class="addAddressButton" text="+" press=".addAddressNode(${Key})"></Button>
                </FlexBox>
            </CustomListItem>
        </List>
    </Panel>
</mvc:View>
